include data.pug
include ../.././components/button/button.pug
include ../.././components/image/image.pug
include ../.././components/slider-navigation/slider-navigation.pug
include ../.././components/breadcrumbs/breadcrumbs.pug

section.main-top.main-top-page
  .l-default
    .main-top__wrapper
      .main-top__info
        +breadcrumbs({
          breadcrumbs: [
            { text: 'Главная', href: '#' },
            { text: 'Наименование  услуги', href: '#' },
          ],
        })
        h1.main-top__title.f-h1 Импорт товаров из Китая
        .main-top__description.f-body Текст описания блока в разработке, примерный объем текста может варьировтаься от 2-3 строк до 4-5.. Все ситуалисвно
        +button({
          text: 'Рассчитать стоимость',
          icon: main_top_icon,
          href: '#popup-form',
          theme: 'button--light',
          fancybox: true,
        })
        .main-top__slider
          +slider-navigation({
            type: 'custom',
          })
          .main-top__slider-left.swiper
            .swiper-wrapper
              each main_top_slide in main_top_slides
                .main-top__slide.swiper-slide
                  .main-top__slide-title.f-h5.fade-bottom= main_top_slide.title
                  .main-top__slide-text.f-body-small.fade-bottom= main_top_slide.text
            .main-top__slider-progressbar
          .main-top__slider-right.swiper
            .swiper-wrapper
              each main_top_slide in main_top_slides
                .main-top__slide.swiper-slide
                  .main-top__slide-img.filter-fade
                    +image({
                      src: main_top_slide.src,
                      type: main_top_slide.type,
                    })
        .main-top__slider-mobile.swiper
          .swiper-wrapper
            each main_top_slide in main_top_slides
              .main-top__slide.swiper-slide
                .main-top__slide-title.f-h5.fade-bottom= main_top_slide.title
                .main-top__slide-text.f-body-small.fade-bottom= main_top_slide.text
          .main-top__slider-pagination.slider-pagination
      .main-top__video
        video(autoplay muted loop)
          source(src="videos/1.mp4" type="video/mp4")
