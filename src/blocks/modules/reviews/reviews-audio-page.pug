.reviews-audio
  .reviews-audio__slider
    each reviews_audio in reviews_audios
      .reviews-audio__slide
        .reviews-audio__slide-top
          .reviews-audio__slide-play
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path opacity="0.4" d="M16.9611 13.7384L8.99228 18.292C7.65896 19.0539 6 18.0912 6 16.5555V7.44827C6 5.91262 7.65896 4.94989 8.99228 5.71178L16.9611 10.2654C18.3048 11.0332 18.3048 12.9706 16.9611 13.7384Z" fill="#F8F1DF"/>
            </svg>
          .reviews-audio__slide-pause.hidden
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <g opacity="0.4">
                <path d="M4 7C4 5.89543 4.89543 5 6 5H8C9.10457 5 10 5.89543 10 7V17C10 18.1046 9.10457 19 8 19H6C4.89543 19 4 18.1046 4 17V7Z" fill="#F8F1DF"/>
                <path d="M14 7C14 5.89543 14.8954 5 16 5H18C19.1046 5 20 5.89543 20 7V17C20 18.1046 19.1046 19 18 19H16C14.8954 19 14 18.1046 14 17V7Z" fill="#F8F1DF"/>
              </g>
            </svg>
          .reviews-audio__slide-content
            .reviews-audio__slide-file(data-audio=reviews_audio.file)
            .reviews-audio__slide-timer
              .reviews-audio__slide-timer--current.f-caps-small
              .reviews-audio__slide-timer--length.f-caps-small
        .reviews-audio__slide-bottom
          .reviews-audio__slide-logo
            img(src=reviews_audio.logo, alt="")
          .reviews-audio__slide-title.f-h5= reviews_audio.title