include data.pug
include ../.././components/point/point.pug
include ../.././components/button/button.pug
include ../.././components/image/image.pug

section.services.point-wrapper
  .l-default
    +point({
      number: '02',
      text: 'Услуги',
    })
    h2.services__title.f-h2.f-centered Заголовк блока про услуги<br /> в разработке
    .services__items
      each services_item in services_items
        .services__item
          .services__item-img.filter-fade
            +image({
              src: services_item.img,
              type: services_item.type
            })
          .services__item-info
            .services__item-top
              .services__item-title.f-h4= services_item.title
              .services__item-icon
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path opacity="0.4" fill-rule="evenodd" clip-rule="evenodd" d="M12 5.25C12.4142 5.25 12.75 5.58579 12.75 6V18C12.75 18.4142 12.4142 18.75 12 18.75C11.5858 18.75 11.25 18.4142 11.25 18V6C11.25 5.58579 11.5858 5.25 12 5.25Z" fill="#F8F1DF"/>
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M18.75 12C18.75 12.4142 18.4142 12.75 18 12.75L6 12.75C5.58579 12.75 5.25 12.4142 5.25 12C5.25 11.5858 5.58579 11.25 6 11.25L18 11.25C18.4142 11.25 18.75 11.5858 18.75 12Z" fill="#F8F1DF"/>
                </svg>
            .services__item-content
              .services__item-text.f-body= services_item.text
              .services__item-img.filter-fade
                +image({
                  src: services_item.img_mob,
                  type: services_item.type
                })
              +button({
                text: 'Подробнее',
                icon: services_icon,
              })
