include data.pug
include ../.././components/point/point.pug
include ../.././components/image/image.pug
include ../.././components/button/button.pug
include ../.././components/slider-navigation/slider-navigation.pug

section.cases
  .l-default
    +point({
      number: '12',
      text: 'кейсы',
    })
    h2.cases__title.f-h2.f-centered Заголовк блока про услуги<br /> в разработке
    .cases__items
      each cases_item in cases_items
        .cases__item
          .shadow
          .cases__item-info
            .cases__item-top
              .cases__item-title.f-h3!= cases_item.title
              .cases__item-icon!= plus_icon_cases
            .cases__item-description.f-body= cases_item.description
            .cases__table.cases__item-table
              each cases_table_item in cases_item.table
                .cases__table-item
                  .cases__table-title.f-body= cases_table_item.title
                  .cases__table-text.f-body= cases_table_item.text
          .cases__item-actions
            .cases__item-slider.swiper
              .swiper-wrapper
                each cases_slide in cases_item.slides
                  .cases__item-slide.swiper-slide
                    a.cases__item-img(href='img/' + cases_slide + '.jpg' data-fancybox)
                      +image({
                        src: cases_slide,
                        type: 'jpg',
                      })
            +slider-navigation({
              type: 'default',
            })
            +button({
              href: '#',
              text: 'подробнее',
              icon: plus_icon_cases,
            })
    +button({
      href: '#',
      text: 'Смотреть все кейсы компании ( 54 )',
      class: 'button--more',
    })
