include data.pug
include ../.././components/point/point.pug
include ../.././components/button/button.pug
include ../.././components/image/image.pug

section.posts
  .l-default
    +point({
      number: '09',
      text: 'Статьи',
    })
    h2.posts__title.f-h2.f-centered Заголовк блока про услуги<br /> в разработке
    .posts__slider.swiper
      .swiper-wrapper
        each post in post_items
          .posts__item.swiper-slide
            .posts__item-top
              .posts__item-img
                +image({
                  src: post.img,
                  type: post.type,
                })
              .posts__item-date.f-caps-small= post.date
            .posts__item-info
              .posts__item-title.f-h5= post.title
              .posts__item-description.f-body-small= post.description
              +button({
                text: 'Подробнее',
                icon: plus_icon_posts,
              })
      .slider-pagination
    +button({
      text: 'Смотреть все статьи компании ( 54 )',
      class: 'posts__button button--more',
      href: '#',
    })